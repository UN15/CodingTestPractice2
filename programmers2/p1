//정말 좋은 방법인
import java.util.*;
 
class Solution {
  public long solution(long n) {
        String[] list = String.valueOf(n).split("");
        Arrays.sort(list); //112378로
        
 
        StringBuilder sb = new StringBuilder();
        for (String aList : list) 
            sb.append(aList);
 
        return Long.parseLong(sb.reverse().toString());
  }
}
