class Solution {
    public int solution(int n) {
        int answer = 0;
        for(int i = 2; i<n; i++){
            if(n%i == 1){
                answer = i;
                break;
            }
        }
        return answer;
    }
}

class Solution {
    public double solution(int[] arr) {
        double answer = 0;
        double sum = 0;
        for(int i = 0; i<arr.length; i++)
            sum+=arr[i];
        answer = sum/arr.length;
        return answer;
    }
}

class Solution {
    public long[] solution(int x, int n) {
        long[] answer = new long[n];
        for(int i = 1; i<=n; i++){
            answer[i-1] = (long) x*i;
        }
        return answer;
    }
}

class Solution {
    public String solution(int num) {
        String answer = "";
        if(num%2 == 0)
            answer+="Even";
        else
            answer+="Odd";
        return answer;
    }
}

import java.util.*;

 public class Solution {
     public int solution(int n) {
         int answer = 0;
         char[] carr = String.valueOf(n).toCharArray();
         for(int i = 0; i<carr.length; i++){
             answer+=carr[i]-'0';
         }

         return answer;
     }
 }
